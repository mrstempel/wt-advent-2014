@{
    Layout = null;
	var cssClass = Convert.ToInt32(ViewBag.Points) > 0 ? "bonus" : string.Empty;
}

<script>
	$(document).ready(function()
	{
		window.setTimeout("setPanoSize()", 1000);
	});

	function setPanoSize()
	{
		var value = $('#article-placeholder').innerWidth();
		value *= 1;
		var valueHeight = Math.round((value / 16) * 9);
		$('#pano-frame').css('width', value + 'px');
		$('#pano-frame').css('height', valueHeight + 'px');
	}

	$(window).resize(function ()
	{
		setPanoSize();
	});
</script>

<div class="modal-header">
	<span class="btn-close" onclick="hideModal('more-info', @ViewBag.Points)"></span>
</div>
<div class="modal-body">
	<article class="@cssClass" id="article-placeholder">
		<h1>@Translate("antwort15-headline")</h1>
		<h2>@Translate("antwort15-text")</h2>
		<div class="content">
			<iframe src="/Content/15/index.html" id="pano-frame" scrolling="yes"></iframe>
		</div>
		<div class="content-description">@Translate("antwort15-artikel-content-beschreibung")</div>
	</article>
	@Html.Partial("_MoreInfoFooter",null)
</div>
